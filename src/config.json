{
  "version": 2,
  "port": 80,
  "cache_ttl": "5m",
  "timeout": "10s",
  "endpoints": [
    {
      "endpoint": "/activate/{token}",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/api/account/check-token/{token}",
          "method": "GET",
          "encoding": "no-op",
          "disable_host_sanitize": true,
          "host": [
            "http://10.1.1.171"
          ],
          "extra_config": {
            "github.com/devopsfaith/krakend/http": {
              "return_error_details": "account_gateway"
            }
          }
        }
      ]
    },
    {
      "endpoint": "/change-password",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/api/account/change-password",
          "encoding": "json",
          "method": "POST",
          "host": [
            "http://10.1.1.171"
          ],
          "extra_config": {
            "github.com/devopsfaith/krakend/http": {
              "return_error_details": "account_gateway"
            }
          }
        }
      ]
    },
    {
      "endpoint": "/reset-password",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/api/account/reset-password",
          "method": "POST",
          "encoding": "json",
          "host": [
            "http://10.1.1.171"
          ],
          "extra_config": {
            "github.com/devopsfaith/krakend/http": {
              "return_error_details": "account_gateway"
            }
          }
        }
      ]
    }
  ]
}
